<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hueso"
    android:orientation="vertical"
    tools:context=".DetallesClase">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dNombre"
        android:text="Nombre de la clase"
        android:layout_marginTop="60dp"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dCodigo"
        android:text="CÃ³digo de la clase"
        android:layout_marginTop="200dp"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black" />


    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/asistencia"
        android:text="Registrar asistencia"
        android:textSize="24sp"
        android:background="@drawable/button_styles"
        android:backgroundTint="@color/green"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:elegantTextHeight="true"
        android:elevation="@dimen/cardview_default_elevation"/>


</LinearLayout>